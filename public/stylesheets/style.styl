
//######--Imports--######
@import "bootstrap.css"
@import "mixins.styl"

//######--Settings--######
backgroundcolor = rgba(255,255,255,0.6)
body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background: none
  overflow: hidden


.full
  background: url(http://placehold.it/1920x1080) no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover

.video-background
   position: absolute
   bottom: 0
   left: 0
   min-width: 100%
   min-height: 100%
   width: auto
   height: auto
   z-index: -100
   overflow: hidden

.video-pattern
  position: fixed
  background-image: url(../images/pattern.png)
  opacity: 0.8
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: -90

.sectionContainer
  transition(0.5 all ease)
  background: backgroundcolor
  border-radius: 5px
  padding: 1em

#mainContainer
  &.ng-enter
    transition(0.5s all ease-in)
    opacity: 0
    margin-left: 100%
    position:absolute
    &-active
      opacity: 1
      margin-left: 0
      position:inherit
  &.ng-leave
    transition(0.2s all ease-out)
    opacity: 1
    position:inherit
    &-active
      opacity: 0
      position:absolute

.article
  min-width: 100%
  &.ng-enter
    transition(1s all ease)
    opacity: 0
    margin-left: 100%
    &-active
      opacity: 1
      margin-left: 0
  &.ng-leave
    transition(0.5s all ease-out)
    opacity: 1
    height:5em
    &-active
      opacity: 0
      height: 0